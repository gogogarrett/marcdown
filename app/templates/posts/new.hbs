<div class="col-md-6">
  <form>
    <div class="form-group">
      <label>Title</label>
      {{input type="text" value=fields.title class="form-control"}}
    </div>

    <div class="form-group">
      <label>Body</label>
      {{textarea value=fields.body cols="80" rows="6" class="form-control"}}
    </div>

    <button {{action save}} class="btn btn-default">Save</button>
  </form>

  <a href="#" {{action cancel}} class="btn btn-danger">Cancel</a>
</div>

<div class="col-md-6">
  {{word-count fields.body}}

  {{format-markdown fields.body}}
</div>

